.collapse{
  position: relative;
  &:nth-child(n + 3) {
    margin-top: 30px;
  }
}
.collapse-arrow{
  position: absolute;
  top: 50%;
  right: 25px;
  transition: all 0.3s ease;
  transform:translateY(-50%) rotate(180deg);
}
.collapse-arrow img{
  filter:brightness(0);
  opacity: 0.5;
  width: 15px !important;
  height: 7.5px !important;
}

.is-collapsed .collapse-arrow{
  transform:translateY(-50%) rotate(0deg);
}
